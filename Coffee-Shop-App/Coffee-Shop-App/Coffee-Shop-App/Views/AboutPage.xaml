<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Coffee_Shop_App.Views.AboutPage"
    xmlns:vm="clr-namespace:Coffee_Shop_App.ViewModels">
    
    
    
    <StackLayout BackgroundColor="#CFB091">
        <Image Source="apresCoffee.png" HeightRequest="300" Margin="0,30,0,0"/>

        <Button HeightRequest="75" 
                Margin="10,0,10,0" 
                BackgroundColor="#231F20" 
                Text="Espresso" TextColor="#CFB091"
                FontSize="20" FontAttributes="Bold"/>
        
        <Button HeightRequest="75" 
                Margin="10,0,10,0" 
                BackgroundColor="#231F20"
                Text="Hot Drinks" TextColor="#CFB091"
                FontSize="20" FontAttributes="Bold"/>
        
        <Button HeightRequest="75" 
                Margin="10,0,10,0" 
                BackgroundColor="#231F20"
                Text="Cold Drinks" TextColor="#CFB091"
                FontSize="20" FontAttributes="Bold"/>
        
        <Button HeightRequest="75"
                Margin="10,0,10,0"
                BackgroundColor="#231F20"
                Text="Quick Bites" TextColor="#CFB091"
                FontSize="20" FontAttributes="Bold"/>
        
    </StackLayout>
</ContentPage>
